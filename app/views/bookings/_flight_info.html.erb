<div id="flight_filters_result">
  <table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th>
        Departure
      </th>
      <th>
        Destination
      </th>
      <th>
        Flight Date
      </th>
      <th>
        Duration
      </th>
      <th>
        Price
      </th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= @flight.from_airport.name%>
        </td>
        <td>
          <%= @flight.to_airport.name%>
        </td>
        <td>
          <%= @flight.flight_date.strftime('%m/%d/%Y %H:%m')%>
        </td>
        <td>
          <%= @flight.duration%>
        </td>
        <td>
          $<%= @flight.price%>
        </td>
      </tr>
    </tbody>
  </table>